<div class="container">
<h1>New Game</h1>

<% @letters.each do |letter| %>
<div class="each-letter"><span><%= letter %></span></div>
<% end %>
<p></p>
<h3>What is the longest word you can find?</h3>
<form action="/score" method="POST" data-turbo="false">
  <input style="width: 400px; height: 35px;"  type="text" name="answer">
  <input class="btn btn-primary" type="submit" value="Play!">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>
